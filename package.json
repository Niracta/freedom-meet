{
  "name": "freedom-links",
  "description": "a self-hostable microsite for sharing your social links",
  "version": "2022.12.18",
  "main": "src/pages/index.tsx",
  "repository": "git@github.com:Saeris/freedom-links.git",
  "author": "Drake Costa <drake@saeris.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ci": "yarn test --silent",
    "lint": "yarn test:lint",
    "check": "yarn test:typecheck",
    "format": "yarn test:lint --fix",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "yarn test:lint && yarn test:check",
    "test:lint": "next lint",
    "test:check": "tsc --noEmit"
  },
  "dependencies": {
    "@react-three/fiber": "^8.13.0",
    "@vercel/analytics": "^1.0.1",
    "@vercel/og": "^0.5.4",
    "next": "^13.4.2",
    "postcss": "^8.4.20",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "three": "^0.152.2"
  },
  "devDependencies": {
    "@saeris/eslint-config": "^2.3.1",
    "@types/eslint": "^8.4.10",
    "@types/node": "18.16.8",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@types/three": "^0.152.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.30.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.1",
    "typescript": "5.0.4",
    "typescript-plugin-css-modules": "^5.0.1"
  },
  "packageManager": "yarn@3.2.1",
  "eslintConfig": {
    "extends": [
      "@saeris/eslint-config/base",
      "@saeris/eslint-config/react",
      "@saeris/eslint-config/next",
      "@saeris/eslint-config/typescript",
      "@saeris/eslint-config/type-aware"
    ],
    "ignorePatterns": [
      "*.js",
      "*.mjs",
      "*.d.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
